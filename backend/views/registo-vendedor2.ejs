<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/img/logo-small.png" type="image/x-icon" />
    <link rel="stylesheet" href="/css/font.css" type="text/css" />

    <link rel="stylesheet" href="/css/registro_vendedor2.css" />
    <title>Registo de Informações Extras</title>
  </head>
  <body class="container">
    <header>
      <div class="head">
        <i class="fa-solid">Farm2U</i>
      </div>
    </header>
    <form
      action="/registo-vendedor3.html"
      method="post"
      enctype="multipart/form-data"
    >
      <div class="lista-vendedor">
        <div>
          <label for="nome">Nome do Estabelecimento</label>
          <br />
          <input type="text" id="nome" name="store_name" required />
        </div>
        <br />
        <div>
          <label for="iban">IBAN</label>
          <br />
          <input type="text" id="iban" name="iban" required />
        </div>
        <br />
        <div>
          <label for="escolhaOpcao">Tipo de Comércio</label>
          <br />
          <select id="escolhaOpcao" name="seller_category_id" required>
            <option value="">Selecionar</option>
            <% sellerCategories.forEach(category => { %>
            <option value="<%= category.id %>"><%= category.name %></option>
            <% }) %>
          </select>
        </div>
        <br />
        <div>
          <label for="escolhaOpcao">Raio distância entregas</label>
          <br />
          <select id="escolhaOpcao" name="escolhaOpcao" required>
            <option value="">Selecionar</option>
            <option value="5">Até 5km</option>
            <option value="10">Até 10km</option>
            <option value="15">Até 15km</option>
          </select>
        </div>
      </div>
      <div class="upload">
        <div>
          <label for="uploadFotoEstablecimento">Foto da Loja</label>
          <br />
          <input
            type="file"
            id="uploadDocumentoVerso"
            name="documentoVerso"
            accept="image/*"
            required
          />
        </div>
        <br />
        <div>
          <label for="uploadDocumentoFrente"
            >Foto do Documento de Identificação (FRENTE)</label
          >
          <br />
          <input
            type="file"
            id="uploadDocumentoFrente"
            name="documentoFrente"
            accept="image/*"
            required
          />
        </div>
        <br />
        <div>
          <label for="uploadDocumentoVerso"
            >Foto do Documento de Identificação (VERSO)</label
          >
          <br />
          <input
            type="file"
            id="uploadDocumentoVerso"
            name="documentoVerso"
            accept="image/*"
            required
          />
        </div>
        <br />
        <div>
          <label for="uploadIban">Foto Comprovativo IBAN</label>
          <br />
          <input
            type="file"
            id="uploadIban"
            name="documentoIban"
            accept="image/*"
            required
          />
        </div>
        <br />
        <div>
          <label for="uploadLicenca">Foto da Licença Comercial</label>
          <br />
          <input
            type="file"
            id="uploadLicenca"
            name="documentoLicenca"
            accept="image/*"
            required
          />
        </div>
      </div>
        <button class="button">Próximo</button>
      </div>
    </form>
  </body>
</html>
